<%- include("header") -%>

    <div class="hotTopics">TOP HEADLINES</div>

    <!-- Testimonials -->

    <section id="testimonials">
      <div
        id="carouselExampleControls"
        class="carousel slide"
        data-ride="carousel"
      >
        <div class="carousel-inner">
          <div class="carousel-item active">
            <div>
                      <h3><%=posts[0].title%></h3>
                      <img src= "<%=posts[0].urlToImage%>" class="testimonial-image" alt="img"></img>
                      <p><%=posts[0].content.substring(0,200)%><a href="<%=posts[0].url%>" target="_blank">Read more</a></p>
            </div>
          </div>
          <div class="carousel-item">
            <div>
                      <h3><%=posts[1].title%></h3>
                      <img src= "<%=posts[1].urlToImage%>" class="testimonial-image" alt="img"></img>
                      <p><%=posts[1].content.substring(0,200)%><a href="<%=posts[1].url%>" target="_blank">Read more</a></p>
            </div>
          </div>
          <div class="carousel-item">
            <div>
                      <h3><%=posts[2].title%></h3>
                      <img src= "<%=posts[3].urlToImage%>" class="testimonial-image" alt="img"></img>
                      <p><%=posts[3].content.substring(0,200)%><a href="<%=posts[3].url%>" target="_blank">Read more</a></p>
            </div>
          </div>
          <div class="carousel-item">
            <div>
                      <h3><%=posts[3].title%></h3>
                      <img src= "<%=posts[4].urlToImage%>" class="testimonial-image" alt="img"></img>
                      <p><%=posts[4].content.substring(0,200)%><a href="<%=posts[4].url%>" target="_blank">Read more</a></p>
            </div>
          </div>
        </div>
        <a
          class="carousel-control-prev"
          href="#carouselExampleControls"
          role="button"
          data-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a
          class="carousel-control-next"
          href="#carouselExampleControls"
          role="button"
          data-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </section>

    <!-- Cards -->
    <div class="newsHeadlines">
    <div class="row">
      <% for(var i=4; i<posts.length;i++){%> 
          <%if(i%2==0){%>
              <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="sport-col card">
                    <div class="card-header">
                      <h3><%=posts[i].title%></h3>
                    </div>
                    <div class="card-body">
                      <div class="newsPost">
                      <img src= "<%=posts[i].urlToImage%>" class="content-img" alt="img"></img>
                      <p><%=posts[i].content.substring(0,200)%><a href="<%=posts[i].url%>" target="_blank">Read more</a></p>
                    </div>
                  </div>
                </div>
              </div>
          <%}else{%>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="sport-col card">
                    <div class="card-header">
                      <h3><%=posts[i].title%></h3>
                    </div>
                    <div class="card-body">
                      <div class="newsPost">
                      <img src= "<%=posts[i].urlToImage%>" class="content-img" alt="img"></img>
                      <p><%=posts[i].content.substring(0,200)%><a href="<%=posts[i].url%>" target="_blank">Read more</a></p>
                    </div>
                  </div>
                </div>
              </div>
          <%}%>
      <%}%>
    </div>
  </div>
</section>

<%- include("footer") -%>